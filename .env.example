# Database
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DBNAME?sslmode=require

# Auth.js / NextAuth
NEXTAUTH_SECRET=replace-with-random-string
NEXTAUTH_URL=http://localhost:3000

# Redis (optional but recommended)
REDIS_URL=redis://default:password@host:port

# AWS S3
S3_REGION=eu-central-1
S3_BUCKET=your-bucket
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...

# Bank of Israel API base URL (configure to the desired endpoint, server will append ?from=&to=)
BOI_RATES_URL=https://your-boi-api.example.com/rates
RATES_CACHE_TTL=900

# Google Cloud Vision
# Either set GOOGLE_APPLICATION_CREDENTIALS to a file path inside the server environment
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json