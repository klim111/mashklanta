# Database
DATABASE_URL="postgresql://user:password@localhost:5432/nadlanium"

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl

# Email Configuration (using Resend)
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@nadlanium.com
EMAIL_REPLY_TO=support@nadlanium.com

# SMTP Configuration (alternative to Resend)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Application URLs
APP_URL=http://localhost:3000
PUBLIC_APP_NAME=Nadlanium

# AWS S3 (existing)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=your-aws-region
AWS_S3_BUCKET=your-s3-bucket

# Google Cloud Vision (existing)
GOOGLE_APPLICATION_CREDENTIALS=path-to-your-credentials.json

# Redis (existing)
REDIS_URL=redis://localhost:6379